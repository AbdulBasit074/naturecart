<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="HardcodedText">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/searchEt">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nestedMainContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/topSectionAbout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_220sdp"
                    android:background="@drawable/gradient_about"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/appLogo"
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_40sdp"
                        android:contentDescription="@string/icon"
                        android:src="@drawable/logo_transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/aboutLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:fontFamily="@font/roboto_slab_semi_bold"
                        android:text="About \n Nature’s Cart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_22ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/appLogo" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/aboutContainer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_20sdp"

                    app:cardElevation="@dimen/_2sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/topSectionAbout">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient_about">

                        <ImageView
                            android:id="@+id/appLogoAbout"
                            android:layout_width="@dimen/_200sdp"
                            android:layout_height="@dimen/_200sdp"
                            android:contentDescription="@string/icon"
                            android:scaleType="centerCrop"
                            android:src="@drawable/about_section_first"
                            app:layout_constraintBottom_toBottomOf="parent"

                            app:layout_constraintEnd_toEndOf="parent" />

                        <TextView
                            android:id="@+id/aboutLabelAbout"
                            android:layout_width="@dimen/_170sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:fontFamily="@font/roboto_slab_semi_bold"
                            android:text="Nature’s Cart’s Promoter is one of the largest fruit and vegetable importer, wholesaler &amp; distributor in GCC Countries over the last 20 years."
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView

                    android:id="@+id/missionContainer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardElevation="@dimen/_2sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/aboutContainer">

                    <androidx.constraintlayout.widget.ConstraintLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:background="@drawable/mission_background">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/mission_text_bg"
                            android:padding="@dimen/_10sdp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/aboutLabelMission"
                                android:layout_width="@dimen/_170sdp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_3sdp"
                                android:layout_marginBottom="@dimen/_30sdp"
                                android:fontFamily="@font/roboto_slab_semi_bold"
                                android:text="Fresh from the farm, Delivered to your doorstep"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12ssp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/aboutTitleMission" />

                            <TextView
                                android:id="@+id/aboutTitleMission"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_slab_semi_bold"
                                android:text="Our Mission"
                                android:textAlignment="textStart"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_15ssp"
                                app:layout_constraintBottom_toTopOf="@+id/aboutLabelMission"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/contactContainer"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_220sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    app:cardCornerRadius="@dimen/_20sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/missionContainer">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/contactTitle"
                            android:layout_width="@dimen/_250sdp"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="@dimen/_20sdp"
                            android:fontFamily="@font/roboto_slab_semi_bold"
                            android:text="Contact &amp; Help"
                            android:textAlignment="textStart"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/contactEmail"
                            android:layout_width="@dimen/_250sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/contact_item_bg"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_slab_light"
                            android:padding="@dimen/_10sdp"
                            android:text="customercare@naturescart.ae"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp"
                            app:drawableStartCompat="@drawable/ic_mail"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/contactTitle" />

                        <TextView
                            android:id="@+id/contactNumber"
                            android:layout_width="@dimen/_250sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/contact_item_bg"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_slab_light"
                            android:padding="@dimen/_10sdp"
                            android:text="+971509341258"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp"
                            app:drawableStartCompat="@drawable/ic_bx_support"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/contactEmail" />

                        <TextView
                            android:id="@+id/contactFaceBook"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/contact_item_bg"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_slab_light"
                            android:padding="@dimen/_10sdp"
                            android:text="FaceBook"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp"
                            app:drawableStartCompat="@drawable/ic_facebook"
                            app:layout_constraintEnd_toStartOf="@id/contactDetail"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/contactNumber" />

                        <TextView
                            android:id="@+id/contactDetail"
                            android:layout_width="@dimen/_120sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/contact_item_bg"
                            android:drawablePadding="@dimen/_10sdp"
                            android:fontFamily="@font/roboto_slab_light"
                            android:padding="@dimen/_10sdp"
                            android:text="Instagram"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp"
                            app:drawableStartCompat="@drawable/ic_instagram"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/contactFaceBook"
                            app:layout_constraintTop_toBottomOf="@+id/contactNumber" />


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    app:layout_constraintTop_toBottomOf="@id/contactContainer" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>